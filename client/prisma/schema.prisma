datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- AUTH MODELS (REQUIRED FOR GOOGLE LOGIN) ---

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?   // For Credentials Provider
  password       String?   // Redundant but keeping it if your code uses it
  role           String    @default("user") // "admin" or "user"
  
  // Customer Details
  phone          String?   
  address        String?
  city           String?
  country        String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  orders         Order[]   
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// --- SHOP MODELS ---

model Pet {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  code            String   @unique
  name            String
  category        String
  breed           String?
  gender          String?
  age             String?  
  price           String?  
  color           String?
  description     String?
  imageUrl        String?
  images          String[]
  healthGuarantee Boolean?
  status          String   @default("Available") 
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Order {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId            String   @unique 

  // Customer Info
  userId             String?  @db.ObjectId
  customer           String
  email              String
  phone              String
  address            String
  city               String

  // Order Details
  total              Int
  status             String   @default("Pending") 
  cancellationReason String? 

  // Payment Details
  paymentMethod      String   @default("COD") 
  paymentStatus      String   @default("Unverified") 
  bankName           String? 
  transactionId      String? 
  paymentScreenshot  String? 

  items              OrderItem[]
   
  user               User?    @relation(fields: [userId], references: [id]) 

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
}

model OrderItem {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  orderId  String  @db.ObjectId
  petId    String  
  petName  String
  price    Int
  image    String?

  order    Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

// --- CONFIGURATION MODELS ---

model StoreSettings {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  storeName    String   @default("Monito Pet Shop")
  supportEmail String   @default("support@monito.com")
  supportPhone String   @default("+92 300 1234567")
  address      String?  
  
  enableCOD    Boolean  @default(true)
  enableBank   Boolean  @default(true)
  bankName     String?  @default("Meezan Bank")
  bankAccount  String?  @default("0101-239482-01")
  bankTitle    String?  @default("Monito Pets")

  updatedAt    DateTime @updatedAt
}

// --- CONTACT & SUPPORT ---

model ContactMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  subject   String
  message   String
  isRead    Boolean  @default(false) 
  createdAt DateTime @default(now())
}